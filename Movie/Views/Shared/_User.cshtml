<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dashboard.css")
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-markdown.min.css")" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Movie", "Index", "UserOperation", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*<form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" />
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
            </form>*@
            @using (Html.BeginForm("SearchResult", "UserOperation", FormMethod.Post, new { @class = "navbar-form navbar-right",@role="Search"}))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="text" name="Vname" class="form-control" placeholder="请输入需要搜索的内容" />
                </div>
                <button type="submit" class="btn btn-default">搜索</button>
            }

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">功能列表<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("查看个人信息", "UserMessage", "UserOperation")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("查看上传记录", "UploadRecord", "UserOperation")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("查看播放记录", "ViewRecord", "UserOperation")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("查看评论记录", "UserComment", "UserOperation")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("查看收藏记录", "UserFavorite", "UserOperation")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("投稿", "Upload", "UserOperation")</li>
                    <li>@Html.ActionLink("注销", "Loginout", "UserOperation")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <!-- /END THE FEATURETTES -->
        <hr class="featurette-divider bottom">

        <!-- FOOTER -->
        <footer class="bottom">
            <p class="pull-right"><a href="#">返回头部</a></p>
            <p style="text-align:center">&copy; 2017 Movie, 第一小组.</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/bootstrap-markdown.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>