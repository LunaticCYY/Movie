<div class="container marketing" align="center">
    <div id="myCarousel" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <a href="@Url.Action("Detail","UserOperation",new { id = Model.ElementAt(0).VideoId })">
                    <img src="@Url.Content(Model.ElementAt(0).Thumbnail)" style="width: 100%; height: 400px" alt="First slide">
                </a>  
            </div>
            <div class="item">
                <a href="@Url.Action("Detail","UserOperation",new { id = Model.ElementAt(1).VideoId })">
