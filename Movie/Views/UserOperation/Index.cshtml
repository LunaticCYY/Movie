@model IEnumerable<Movie.Models.Video>

@{
    // 检查Cookies是否存在
    if (Request.Cookies["uid"] != null)
    {
        ViewBag.Title = "欢迎"+ Request.Cookies["uid"].Value;
    }
    else
    {
        ViewBag.Title = "游客";
    }
