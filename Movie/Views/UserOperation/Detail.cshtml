@model Movie.Models.VideoDetail
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_User.cshtml";
}
<div class="container" style="width: 60%;" align="center">
    <h3 align="left">>>@Html.DisplayFor(Model => Model.Vname)</h3>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="thumbnail">
                <video width="100%" controls >
                    <source src="@Url.Content(Model.Vurl)" type="video/mp4">
                </video>
                <div class="caption">
                    <p align="left">
                        @using (Html.BeginForm("AddFavorite", "UserOperation", FormMethod.Post, new { style = "float:left;width:20px;height:20px" }))
                        {
                            <button type="submit" class="btn btn-lg btn-link"><span class=" glyphicon glyphicon-star"></span></button>
                        }
                    </p>

                    <p align="left">
                        <span><span class="glyphicon glyphicon-expand">@Html.DisplayFor(Model => Model.ViewedNum)</span></span>
                        <span style="float:right"><span class="glyphicon glyphicon-check">@Html.DisplayFor(Model => Model.CommentNum)</span></span>
                    </p>         
                </div>
            </div>
        </div>
