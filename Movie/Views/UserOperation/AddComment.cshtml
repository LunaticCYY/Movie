@model Movie.Models.Total
@{
    //Layout = "~/Views/Shared/_User.cshtml";
    Layout = null;
}

@using (Html.BeginForm("AddComment", "UserOperation", FormMethod.Post, new { style = "padding-left: 15px; padding-right: 15px;width:100%;",@id="Cform"}))
{
    @Html.AntiForgeryToken()
    <label for="comment.Content" style="text-align:left">用户评论</label>
    <textarea name="comment.Content" class="form-control" rows="10" data-provide="markdown" placeholder="字数不超过255"></textarea>
    <button type="submit" class="btn btn-default" style="float: left;">提交评论</button>
}

