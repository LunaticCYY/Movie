@model PagedList.IPagedList<Movie.Models.Total>
@using PagedList.Mvc
@{
    Layout = "~/Views/Shared/_User.cshtml";
}
@{
    ViewBag.Title = "用户收藏查看";
}
<h2>收藏</h2>
<table class="table">
    <tr>
        <th>
            视频编号
        </th>
        <th>
            视频名称
        </th>
        <th>
            收藏时间
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.video.VideoId)
            </td>
            <td>
                <a href="@Url.Action("Detail","UserOperation",new { id = item.video.VideoId })">
                    @Html.DisplayFor(modelItem => item.video.Vname)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.favorite.FavoriteTime)
            </td>
        </tr>
    }

</table>
每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
@Html.PagedListPager(Model, page => Url.Action("UserFavorite", new { page }))