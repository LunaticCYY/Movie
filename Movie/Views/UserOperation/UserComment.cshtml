@model IEnumerable<Movie.Models.Total>
@{
    Layout = "~/Views/Shared/_User.cshtml";
}
@{
    ViewBag.Title = "用户评论查看";
}
<h2>评论查看</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.video.VideoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.video.Vname)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.comment.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comment.CommentTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.video.VideoId)
            </td>
            <td>
                <a href="@Url.Action("Detail","UserOperation",new { id = item.video.VideoId })">
                    @Html.DisplayFor(modelItem => item.video.Vname)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.comment.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comment.CommentTime)
            </td>
        </tr>
    }

</table>


